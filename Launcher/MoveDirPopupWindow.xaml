<Window x:Class="Launcher.MoveDirPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        Title="MoveDirPopupWindow" Height="150" Width="400">
    <StackPanel VerticalAlignment="Center" Margin="10">
        <TextBlock>Enter a directory</TextBlock>
        <TextBox x:Name="dirTextBox"/>
        <StackPanel Orientation="Horizontal">
            <Button Margin="0, 5, 10, 5" Padding="5" Content="Move directory" Click="MoveDir" />
            <Button Margin="0, 5, 10, 5" Padding="5" Content="Cancel" Click="Cancel"/>
        </StackPanel>
        <Label x:Name="Error" Content="Directory doesn't exist." Foreground="Red" Visibility="Hidden"/>
    </StackPanel>

</Window>
